<p style="color: green"><%= notice %></p>
<% if alert.present? %>
  <div style="color: red; margin-bottom: 20px; padding: 10px; border: 1px solid red; border-radius: 4px;">
    <strong>Error:</strong> <%= alert %>
  </div>
<% end %>

<h1><%= @account ? "Animals for #{@account.name}" : "Animals" %></h1>

<div style="margin-bottom: 20px;">
  <%= link_to "Create new animal", new_account_animal_path(@account) %> |
  <%= link_to "Back to account", account_path(@account) %>
</div>
<div id="animals">
  <% @animals.each do |animal| %>
  <div id="<%= dom_id animal %>" style="border: 2px solid #ccc; border-radius: 5px; padding: 10px; margin-bottom: 10px; background-color: #f0f0f0; width: 300px;">
    <%= render animal %>
      <div style="display: flex; gap: 10px;">
        <%= button_to "Edit this animal", edit_animal_path(animal), method: :get, style: "background-color:rgb(32, 100, 172); color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer;" %>
        <%= button_to "Destroy this animal", animal_path(animal), method: :delete, form: { style: "display: inline" }, style: "background-color:rgb(198, 29, 29); color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer;" %>
      </div>
    </div>
  <% end %>
</div>
